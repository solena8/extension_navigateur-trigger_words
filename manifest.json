{
  "manifest_version": 3,
  "name": "Don't TRIGGER me",
  "version": "1.0",
  "description": "An extension to block and replace certain words in Web pages",
  "permissions": ["storage", "activeTab", "scripting"],

  "action": {
    "default_popup": "nom.html",

    "default_icon": {
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "128": "icons/icon128.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"]
    }
  ]
}
